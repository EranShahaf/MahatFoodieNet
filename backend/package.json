{
    "name": "backend",
    "version": "1.0.0",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "jest"
    },
    "dependencies": {
        "axios": "^1.12.2",
        "bcryptjs": "^3.0.2",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "minio": "^8.0.6",
        "pg": "^8.16.3",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.28.3",
        "babel-jest": "^30.2.0",
        "jest": "^30.2.0",
        "nodemon": "^3.1.0",
        "supertest": "^7.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {
            "^.+\\.js$": "babel-jest"
        },
        "moduleFileExtensions": ["js", "json"],
        "testMatch": ["**/__tests__/**/*.test.js"],
        "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.js"],
        "collectCoverageFrom": [
            "controllers/**/*.js",
            "services/**/*.js",
            "repositories/**/*.js",
            "middlewares/**/*.js",
            "!**/node_modules/**"
        ]
    }
}
